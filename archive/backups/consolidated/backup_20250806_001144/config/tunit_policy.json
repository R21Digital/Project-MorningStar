{
  "enabled": false,
  "opt_in_required": true,
  "version": "2.0",
  "description": "T-Unit BH PvP Phase 2 - Safety-first PvP bounty hunting",
  
  "safety_settings": {
    "max_risk_level": "caution",
    "cooldown_between_hunts": 300,
    "max_hunt_duration": 1800,
    "emergency_escape_threshold": 0.8,
    "disable_in_high_risk": true,
    "high_risk_zones": [
      "gcw_hotspots",
      "crowded_areas",
      "restricted_zones",
      "safe_zones",
      "guarded_areas"
    ],
    "safe_zone_radius": 200,
    "escape_path_length": 3,
    "safety_check_interval": 30,
    "emergency_logout_threshold": 0.95,
    "risk_assessment_interval": 10,
    "player_density_threshold": 8,
    "hostile_player_threshold": 0.4
  },
  
  "target_acquisition": {
    "mission_terminal_enabled": true,
    "triangulation_heuristics": true,
    "max_tracking_distance": 5000,
    "min_target_confidence": 0.7,
    "target_refresh_interval": 60,
    "max_targets_per_scan": 10,
    "target_filtering": {
      "min_reward": 500,
      "max_distance": 5000,
      "excluded_zones": ["safe_zones", "restricted_areas"],
      "preferred_targets": ["overt_player", "gcw_target"],
      "excluded_targets": []
    },
    "terminal_scan_patterns": [
      "overt.*\\d+,\\d+.*\\d+m.*\\d+c",
      "tef.*\\d+,\\d+.*\\d+m.*\\d+c",
      "enemy.*\\d+,\\d+.*\\d+m.*\\d+c",
      "hostile.*\\d+,\\d+.*\\d+m.*\\d+c",
      "gcw.*\\d+,\\d+.*\\d+m.*\\d+c"
    ]
  },
  
  "combat_settings": {
    "range_management": true,
    "line_of_sight_check": true,
    "burst_window_duration": 30,
    "burst_window_cooldown": 120,
    "escape_path_planning": true,
    "counter_gank_response": true,
    "optimal_engagement_range": 150,
    "max_engagement_range": 300,
    "min_engagement_range": 50,
    "combat_timeout": 300,
    "damage_thresholds": {
      "low": 0.3,
      "medium": 0.5,
      "high": 0.7,
      "critical": 0.9
    },
    "escape_triggers": {
      "health_below": 0.4,
      "multiple_hostiles": 2,
      "zone_risk_above": 0.8,
      "combat_time_exceeded": 300
    }
  },
  
  "logging_settings": {
    "integrate_with_leaderboard": true,
    "log_hunt_details": true,
    "log_safety_checks": true,
    "log_triangulation_data": true,
    "leaderboard_batch_144": true,
    "log_level": "info",
    "log_file": "logs/tunit_bh_pvp.log",
    "log_rotation": {
      "enabled": true,
      "max_size": "10MB",
      "backup_count": 5
    },
    "leaderboard_integration": {
      "enabled": true,
      "data_file": "data/bh/leaderboard_data.json",
      "update_interval": 60,
      "include_metrics": [
        "hunt_success_rate",
        "average_hunt_duration",
        "total_rewards",
        "safety_violations",
        "escape_success_rate"
      ]
    }
  },
  
  "discord_alerts": {
    "enabled": true,
    "alert_types": [
      "hunt_start",
      "hunt_complete",
      "safety_alert",
      "counter_gank_detected",
      "escape_executed"
    ],
    "include_risk_level": true,
    "include_rewards": true,
    "include_location": false,
    "alert_channel": "bounty_hunter",
    "alert_format": {
      "hunt_start": "üéØ T-Unit BH PvP: Hunt started for {target} ({type})",
      "hunt_complete": "‚úÖ T-Unit BH PvP: Hunt completed for {target} - Success: {success}",
      "safety_alert": "‚ö†Ô∏è T-Unit BH PvP: Safety alert - {level} risk detected",
      "counter_gank": "üö® T-Unit BH PvP: Counter-gank detected - executing escape",
      "escape_executed": "üèÉ T-Unit BH PvP: Escape plan executed successfully"
    }
  },
  
  "performance_settings": {
    "hunt_cycle_delay": 30,
    "safety_check_interval": 10,
    "target_scan_interval": 60,
    "location_update_interval": 30,
    "burst_window_check_interval": 5,
    "escape_path_update_interval": 15,
    "max_concurrent_operations": 3,
    "memory_usage_limit": 100,
    "cpu_usage_limit": 80
  },
  
  "zone_monitoring": {
    "enabled": true,
    "monitored_zones": [
      "gcw_hotspots",
      "crowded_areas",
      "restricted_zones",
      "safe_zones",
      "guarded_areas"
    ],
    "zone_risk_multipliers": {
      "gcw_hotspot": 2.0,
      "crowded_area": 1.5,
      "restricted_zone": 1.8,
      "safe_zone": 0.5,
      "guarded_area": 1.3
    },
    "zone_scan_interval": 30,
    "zone_risk_threshold": 0.7
  },
  
  "player_monitoring": {
    "enabled": true,
    "scan_radius": 300,
    "max_nearby_players": 10,
    "hostile_player_threshold": 0.3,
    "player_scan_interval": 10,
    "player_movement_tracking": true,
    "suspicious_behavior_detection": true,
    "group_size_monitoring": true
  },
  
  "escape_planning": {
    "enabled": true,
    "escape_path_length": 3,
    "safe_zone_search_radius": 500,
    "escape_trigger_conditions": [
      "health_below_40_percent",
      "multiple_hostiles_detected",
      "zone_risk_above_threshold",
      "combat_time_exceeded"
    ],
    "escape_path_optimization": {
      "enabled": true,
      "prefer_safe_zones": true,
      "avoid_hostile_zones": true,
      "minimize_exposure": true
    }
  },
  
  "burst_window_management": {
    "enabled": true,
    "burst_duration": 30,
    "burst_cooldown": 120,
    "damage_multiplier": 1.5,
    "accuracy_boost": 0.2,
    "burst_window_conditions": [
      "target_in_range",
      "line_of_sight_clear",
      "safety_level_acceptable",
      "no_counter_gank_detected"
    ]
  },
  
  "triangulation_settings": {
    "enabled": true,
    "min_confidence": 0.7,
    "max_distance": 5000,
    "location_update_interval": 30,
    "path_prediction": true,
    "zone_analysis": true,
    "reference_points": [
      "mission_terminal",
      "player_reports",
      "zone_activity",
      "movement_patterns"
    ],
    "signal_processing": {
      "noise_reduction": true,
      "signal_enhancement": true,
      "confidence_calculation": true
    }
  },
  
  "risk_assessment": {
    "enabled": true,
    "assessment_interval": 10,
    "risk_factors": {
      "player_density": 0.3,
      "zone_risk": 0.4,
      "recent_activity": 0.2,
      "target_difficulty": 0.1
    },
    "risk_thresholds": {
      "safe": 0.3,
      "caution": 0.6,
      "danger": 0.8,
      "critical": 0.95
    },
    "automatic_disabling": {
      "enabled": true,
      "disable_at_critical": true,
      "disable_at_danger": false,
      "re_enable_at_safe": true
    }
  },
  
  "cooldown_management": {
    "enabled": true,
    "cooldown_between_hunts": 300,
    "cooldown_after_failure": 600,
    "cooldown_after_escape": 900,
    "cooldown_after_safety_violation": 1800,
    "cooldown_reduction_factors": {
      "successful_hunt": 0.8,
      "safe_zone_activity": 0.9,
      "low_risk_zone": 0.95
    }
  },
  
  "data_persistence": {
    "enabled": true,
    "hunt_history_size": 100,
    "safety_log_size": 50,
    "target_data_size": 200,
    "cleanup_interval": 3600,
    "backup_enabled": true,
    "backup_interval": 86400
  },
  
  "debug_settings": {
    "verbose_logging": false,
    "log_combat_decisions": false,
    "log_triangulation_data": false,
    "log_safety_assessments": true,
    "simulate_combat": false,
    "test_mode": false,
    "performance_monitoring": true
  },
  
  "integration_settings": {
    "batch_144_leaderboard": {
      "enabled": true,
      "data_file": "data/bh/leaderboard_data.json",
      "update_interval": 60,
      "include_metrics": true
    },
    "discord_integration": {
      "enabled": true,
      "channel": "bounty_hunter",
      "alert_types": ["hunt_start", "hunt_complete", "safety_alert"]
    },
    "pvp_policies": {
      "enabled": true,
      "policy_file": "config/pvp_policies.json",
      "integration_enabled": true
    }
  }
} 