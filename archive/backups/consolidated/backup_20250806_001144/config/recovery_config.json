{
  "detection": {
    "coordinate_delta_threshold": 5.0,
    "repeat_click_threshold": 5,
    "quest_progress_timeout": 300.0,
    "path_oscillation_threshold": 3,
    "detection_confidence_threshold": 0.7,
    "detection_cooldown": 30.0,
    "coordinate_history_size": 50,
    "click_history_size": 20,
    "quest_progress_history_size": 10,
    "path_history_size": 30
  },
  "recovery": {
    "max_recovery_attempts": 6,
    "recovery_cooldown_base": 60.0,
    "recovery_cooldown_multiplier": 2.0,
    "max_cooldown": 3600.0,
    "success_verification_delay": 5.0,
    "recovery_timeout": 300.0
  },
  "actions": {
    "micro_path_jitter": {
      "enabled": true,
      "movement_range": 3,
      "movement_count": 5,
      "delay_between_movements": 0.5,
      "max_steps": 10
    },
    "mount_toggle": {
      "enabled": true,
      "mount_key": "m",
      "toggle_delay": 1.0,
      "verify_mount_state": true,
      "max_attempts": 3
    },
    "face_camera_rescan": {
      "enabled": true,
      "rotation_left_key": "q",
      "rotation_right_key": "e",
      "rotation_duration": 2.0,
      "scan_delay": 1.0,
      "full_rotation": false
    },
    "nearest_navmesh_waypoint": {
      "enabled": true,
      "max_distance": 1000.0,
      "waypoint_search_radius": 500.0,
      "navigation_timeout": 30.0,
      "safe_waypoints_only": false
    },
    "shuttle_fallback": {
      "enabled": true,
      "destination_priority": ["nearest_city", "home_city", "capital_city"],
      "shuttle_search_radius": 200.0,
      "travel_timeout": 60.0,
      "force_shuttle": false
    },
    "safe_logout": {
      "enabled": true,
      "logout_delay": 5.0,
      "save_state": true,
      "notify_user": true,
      "force_logout": false
    }
  },
  "logging": {
    "enabled": true,
    "log_file": "logs/recovery/recovery_events.jsonl",
    "log_level": "INFO",
    "max_log_size": 10485760,
    "backup_count": 5,
    "log_format": "json"
  },
  "dashboard": {
    "enabled": true,
    "update_interval": 5.0,
    "show_timeline": true,
    "show_statistics": true,
    "show_cooldowns": true,
    "max_timeline_entries": 50
  },
  "notifications": {
    "enabled": true,
    "stuck_detected": true,
    "recovery_started": true,
    "recovery_completed": true,
    "recovery_failed": true,
    "emergency_logout": true,
    "notification_methods": ["dashboard", "log"]
  },
  "safety": {
    "max_concurrent_recoveries": 1,
    "emergency_timeout": 600.0,
    "force_stop_on_timeout": true,
    "save_state_before_recovery": true,
    "restore_state_after_recovery": false
  },
  "performance": {
    "detection_interval": 1.0,
    "coordinate_update_interval": 0.5,
    "click_record_interval": 0.1,
    "quest_progress_check_interval": 10.0,
    "path_record_interval": 1.0,
    "cleanup_interval": 3600.0
  },
  "debug": {
    "enabled": false,
    "verbose_logging": false,
    "log_detection_details": false,
    "log_recovery_details": true,
    "log_performance_metrics": false
  }
} 