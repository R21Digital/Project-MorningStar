  "features": {
    "retryMechanism": {
      "enabled": true,
      "exponentialBackoff": true,
      "maxRetryDelay": 60000
    },
    "queueManagement": {
      "enabled": true,
      "maxQueueSize": 1000,
      "priorityQueue": true,
      "batchProcessing": false
    },
    "customEmbeds": {
      "enabled": true,
