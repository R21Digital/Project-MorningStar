      "scheduling": {
        "enabled": true,
        "quietHours": {
          "start": "23:00",
          "end": "07:00",
          "timezone": "UTC"
        },
        "batchNotifications": true,
        "batchInterval": 900000,
        "urgentOverride": ["Critical", "High"]
      }
    },
    
    "general": {
      "url": "${DISCORD_GENERAL_WEBHOOK_URL}",
      "name": "MorningStar Announcements",
      "avatar": "https://cdn.discordapp.com/attachments/general-avatar.png",
      "enabled": true,
      "description": "General announcements and system notifications",
      "mentions": ["@Announcements"],
      "channels": ["announcements", "general"],
      "filters": {
        "minSeverity": "Info",
        "types": ["system", "announcement", "maintenance", "update"],
        "excludeRoutine": false
      },
      "scheduling": {
        "enabled": false,
        "quietHours": {
          "start": "00:00",
          "end": "06:00",
          "timezone": "UTC"
        },
        "batchNotifications": false
      }
    },
    
    "security": {
      "url": "${DISCORD_SECURITY_WEBHOOK_URL}",
      "name": "MorningStar Security",
      "avatar": "https://cdn.discordapp.com/attachments/security-avatar.png",
      "enabled": true,
      "description": "Security alerts and suspicious activity notifications",
      "mentions": ["@Security", "@Admins"],
      "channels": ["security-alerts", "admin"],
      "filters": {
        "minSeverity": "High",
        "types": ["malware_detected", "suspicious_upload", "rate_limit_exceeded", "unauthorized_access"],
        "excludeTest": true
      },
      "scheduling": {
        "enabled": false,
        "urgentOnly": true,
        "overrideQuietHours": true
      }
    },
    
    "analytics": {
      "url": "${DISCORD_ANALYTICS_WEBHOOK_URL}",
      "name": "MorningStar Analytics",
      "avatar": "https://cdn.discordapp.com/attachments/analytics-avatar.png",
      "enabled": false,
      "description": "Usage statistics and performance metrics",
      "mentions": [],
      "channels": ["analytics", "metrics"],
      "filters": {
        "types": ["daily_summary", "weekly_report", "milestone", "performance_alert"],
        "scheduleOnly": true
      },
      "scheduling": {
        "enabled": true,
        "schedule": {
          "daily": "09:00",
          "weekly": "MON:10:00",
          "monthly": "01:12:00"
        },
        "timezone": "UTC"
      }
    }
  },
  
  "rateLimiting": {
    "enabled": true,
    "maxRequests": 30,
    "timeWindow": 60000,
    "retryDelay": 5000,
    "maxRetries": 3,
    "backoffMultiplier": 2,
    "globalLimit": {
      "maxPerHour": 100,
      "maxPerDay": 1000
    },
    "perWebhookLimit": {
      "maxPerMinute": 10,
      "maxPerHour": 50
    }
  },
  
  "formatting": {
    "embedColor": {
      "modSubmission": 9699766,
      "bugReport": 15158332,
      "success": 2664544,
      "warning": 15973372,
      "info": 3447003,
      "error": 15073324,
      "security": 16734296,
      "analytics": 5793266
    },
    "includeTimestamp": true,
    "includeFooter": true,
    "maxDescriptionLength": 2048,
    "maxFieldLength": 1024,
    "maxFields": 25,
    "timestampFormat": "relative",
    "authorIcons": {
      "fallbackUrl": "https://cdn.discordapp.com/embed/avatars/0.png",
      "anonymousUrl": "https://cdn.discordapp.com/embed/avatars/1.png"
    }
  },
  
  "security": {
    "validateUrls": true,
    "allowedDomains": ["discord.com", "discordapp.com"],
    "requireHttps": true,
    "signatureValidation": false,
    "secretKey": "${WEBHOOK_SECRET_KEY}",
    "logAllRequests": true,
    "sensitiveDataMasking": {
      "enabled": true,
      "maskEmail": true,
      "maskIp": true,
      "preserveLength": false
    },
    "contentFiltering": {
      "enabled": true,
      "blockedWords": ["password", "token", "secret", "key"],
      "maxContentLength": 4000
    }
  },
  
  "monitoring": {
    "enabled": true,
    "healthCheck": {
      "interval": 300000,
      "timeout": 10000,
      "retryAttempts": 3
    },
    "statistics": {
      "trackDelivery": true,
      "trackLatency": true,
      "trackErrors": true,
      "retentionDays": 30
    },
    "alerts": {
      "failureThreshold": 5,
      "latencyThreshold": 5000,
      "notifyChannel": "system-alerts",
      "escalationLevels": ["dev", "admin", "critical"]
    }
  },
  
