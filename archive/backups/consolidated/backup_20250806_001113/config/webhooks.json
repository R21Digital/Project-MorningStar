      "enabled": true,
      "description": "Notifications for new mod submissions and updates",
      "mentions": ["@ModTeam", "@Reviewers"],
      "channels": ["mod-submissions", "mod-reviews"],
      "filters": {
        "minSeverity": "Low",
        "categories": ["UI Enhancement", "Gameplay", "Quality of Life", "Visual", "Audio", "Performance", "Utility", "Bug Fix"],
        "excludeTest": true
