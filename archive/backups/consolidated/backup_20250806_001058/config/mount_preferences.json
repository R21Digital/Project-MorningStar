{
  "mount_scanning": {
    "enabled": true,
    "scan_methods": [
      "command_output",
      "ocr_interface",
      "hotbar_scan"
    ],
    "scan_interval": 30,
    "auto_refresh": true,
    "cache_duration": 300
  },
  "speed_prioritization": {
    "enabled": true,
    "speed_tiers": {
      "very_fast": {
        "min_speed": 26.0,
        "max_speed": 100.0,
        "priority": 4,
        "examples": ["jetpack", "swoop_bike", "landspeeder"]
      },
      "fast": {
        "min_speed": 16.0,
        "max_speed": 25.0,
        "priority": 3,
        "examples": ["speeder_bike", "hover_speeder", "varactyl"]
      },
      "medium": {
        "min_speed": 9.0,
        "max_speed": 15.0,
        "priority": 2,
        "examples": ["dewback", "bantha", "tauntaun"]
      },
      "slow": {
        "min_speed": 5.0,
        "max_speed": 8.0,
        "priority": 1,
        "examples": ["rancor", "slow_creature"]
      }
    },
    "fallback_strategy": "fastest_available"
  },
  "user_preferences": {
    "preferred_mounts": [
      "swoop_bike",
      "jetpack",
      "speeder_bike",
      "landspeeder"
    ],
    "banned_mounts": [
      "rancor",
      "slow_creature"
    ],
    "preferred_mount_type": "speeder",
    "situational_preferences": {
      "combat": {
        "preferred_mounts": ["jetpack", "swoop_bike"],
        "fallback": "fastest_available"
      },
      "travel": {
        "preferred_mounts": ["landspeeder", "speeder_bike"],
        "fallback": "fastest_available"
      },
      "hunting": {
        "preferred_mounts": ["dewback", "varactyl"],
        "fallback": "fastest_available"
      },
      "city": {
        "preferred_mounts": ["speeder_bike", "hover_speeder"],
        "fallback": "fastest_available"
      }
    }
  },
  "auto_mount": {
    "enabled": true,
    "auto_mount_distance": 100,
    "auto_dismount_in_combat": true,
    "auto_dismount_in_buildings": true,
    "avoid_no_mount_zones": true,
    "mount_cooldown_tolerance": 5.0
  },
  "zone_restrictions": {
    "blacklisted_zones": [
      "inside_building",
      "spaceport",
      "cantina",
      "medical_center",
      "bank",
      "guild_hall"
    ],
    "combat_mount_allowed": false,
    "indoor_mount_allowed": false,
    "city_mount_allowed": true
  },
  "mount_detection": {
    "command_output": {
      "enabled": true,
      "command": "/learn_mounts",
      "parse_patterns": [
        "([A-Za-z\\s]+)\\s*-\\s*Speed:\\s*(\\d+(?:\\.\\d+)?)",
        "([A-Za-z\\s]+)\\s*\\(Available\\)",
        "([A-Za-z\\s]+)\\s*\\(Cooldown:\\s*(\\d+)\\s*seconds\\)"
      ]
    },
    "ocr_interface": {
      "enabled": true,
      "scan_regions": [
        "mount_window",
        "hotbar",
        "character_sheet"
      ],
      "text_patterns": [
        "mount",
        "vehicle",
        "speeder",
        "creature"
      ]
    },
    "hotbar_scan": {
      "enabled": true,
      "scan_slots": [1, 2, 3, 4, 5, 6, 7, 8, 9, 0],
      "mount_icons": [
        "mount_icon",
        "vehicle_icon",
        "speeder_icon"
      ]
    }
  },
  "performance": {
    "max_mount_attempts": 3,
    "mount_cooldown": 5,
    "scan_timeout": 10,
    "cache_enabled": true,
    "cache_duration": 300
  },
  "logging": {
    "mount_scan_logs": true,
    "speed_ranking_logs": true,
    "preference_matching_logs": true,
    "fallback_logs": true
  },
  "advanced": {
    "dynamic_speed_adjustment": true,
    "terrain_speed_modifiers": {
      "flat_ground": 1.0,
      "hills": 0.8,
      "mountains": 0.6,
      "water": 0.4,
      "swamp": 0.3
    },
    "weather_speed_modifiers": {
      "clear": 1.0,
      "rain": 0.9,
      "storm": 0.7,
      "fog": 0.8
    },
    "time_of_day_modifiers": {
      "day": 1.0,
      "night": 0.9,
      "dawn": 0.95,
      "dusk": 0.95
    }
  }
} 