def test_trainer_finder_basic_functionality():
    """Test basic trainer finder functionality."""
    print("\nğŸ§ª Testing Trainer Finder Basic Functionality")
    
    try:
        # Initialize trainer finder
        finder = TrainerFinder()
        print("âœ… TrainerFinder initialized successfully")
        
        # Test finding available trainers
        trainers = finder.find_available_trainers("artisan")
        print(f"âœ… Found {len(trainers)} available artisan trainers")
        
        # Test finding nearest trainer with skills
        result = finder.find_nearest_trainer_with_skills("artisan")
        if result:
            trainer, skills = result
            print(f"âœ… Found nearest trainer: {trainer.name} with {len(skills)} skills")
        else:
            print("âš ï¸ No trainers found with available skills (expected in test environment)")
        
        # Test training summary
        summary = finder.get_training_summary()
        print(f"âœ… Training summary: {summary}")
        
        return True
        
    except Exception as e:
        print(f"âŒ Trainer Finder Basic Functionality Test Failed: {e}")
        return False


def test_trainer_finder_skill_matching():
    """Test skill matching functionality."""
    print("\nğŸ§ª Testing Trainer Finder Skill Matching")
    
    try:
        finder = TrainerFinder()
        
        # Test skill requirements checking
        trainers = finder.find_available_trainers("marksman")
        if trainers:
            trainer = trainers[0]
            skills = finder.check_skill_requirements(trainer)
            print(f"âœ… Found {len(skills)} available skills at {trainer.name}")
            
            for skill in skills:
                print(f"  - {skill.skill_name}: {skill.current_level.name} -> {skill.required_level.name}")
        else:
            print("âš ï¸ No trainers available for skill matching test")
        
        return True
        
    except Exception as e:
        print(f"âŒ Trainer Finder Skill Matching Test Failed: {e}")
        return False


