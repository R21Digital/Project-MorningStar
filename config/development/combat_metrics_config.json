    "auto_load_existing": true,
    "max_sessions_in_memory": 50,
    "session_cleanup_days": 30,
    "enable_session_comparison": true,
    "dead_skill_threshold": 0.05
  },
  "performance_analyzer": {
    "benchmarks": {
      "beginner": {
        "dps_target": 50.0,
        "xp_per_hour_target": 1000.0,
        "damage_per_hour_target": 5000.0,
        "efficiency_target": 0.6
