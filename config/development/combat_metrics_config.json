      "intermediate": {
        "dps_target": 100.0,
        "xp_per_hour_target": 2000.0,
        "damage_per_hour_target": 10000.0,
        "efficiency_target": 0.7
      },
      "advanced": {
        "dps_target": 200.0,
        "xp_per_hour_target": 4000.0,
        "damage_per_hour_target": 20000.0,
        "efficiency_target": 0.8
      },
      "expert": {
        "dps_target": 400.0,
        "xp_per_hour_target": 8000.0,
        "damage_per_hour_target": 40000.0,
        "efficiency_target": 0.9
      },
      "elite": {
        "dps_target": 800.0,
        "xp_per_hour_target": 16000.0,
        "damage_per_hour_target": 80000.0,
        "efficiency_target": 0.95
      }
    },
    "thresholds": {
      "excellent": 0.9,
      "good": 0.7,
      "average": 0.5,
      "poor": 0.3
    }
  },
  "rotation_optimizer": {
    "dead_skill_threshold": 0.05,
    "efficiency_threshold": 0.7,
    "max_abilities_in_rotation": 10,
    "min_abilities_in_rotation": 3,
    "enable_synergy_analysis": true,
    "optimization_targets": {
      "dps": 100.0,
      "xp_per_hour": 2000.0,
      "efficiency": 0.8
    }
  },
  "analysis_settings": {
    "enable_real_time_analysis": true,
    "analysis_interval": 60.0,
    "trend_analysis_days": 7,
    "performance_tracking": true,
    "auto_generate_reports": true,
    "report_format": "json"
  },
  "logging": {
    "combat_events": true,
    "ability_usage": true,
    "damage_dealt": true,
    "xp_gained": true,
    "enemy_kills": true,
    "player_deaths": true,
    "session_summary": true,
    "performance_metrics": true,
    "rotation_analysis": true
  },
  "performance_tracking": {
    "track_dps": true,
    "track_xp_per_hour": true,
    "track_damage_per_hour": true,
    "track_efficiency": true,
    "track_ability_usage": true,
    "track_rotation_performance": true,
    "track_dead_skills": true,
    "track_benchmark_comparison": true
  },
